{
  "info": {
    "_postman_id": "bf64f1af-0a2c-4f17-8e6c-9d0df7e0b1a2",
    "name": "GoalsGuild API (REST)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for GoalsGuild REST endpoints. Set variables: baseUrl (e.g. https://tuffc5cto8.execute-api.us-east-2.amazonaws.com/v1), apiKey (if needed), jwt (Bearer token)."
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-api-key", "value": "{{apiKey}}", "type": "text", "disabled": false }
            ],
            "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "POST /users/signup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-api-key", "value": "{{apiKey}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"ChangeMe123!\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/users/signup", "host": ["{{baseUrl}}"], "path": ["users", "signup"] }
          }
        },
        {
          "name": "POST /users/login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-api-key", "value": "{{apiKey}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user@example.com\",\n  \"password\": \"ChangeMe123!\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/users/login", "host": ["{{baseUrl}}"], "path": ["users", "login"] }
          }
        },
        {
          "name": "POST /users/login/google",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "x-api-key", "value": "{{apiKey}}" }
            ],
            "body": { "mode": "raw", "raw": "{}" },
            "url": { "raw": "{{baseUrl}}/users/login/google", "host": ["{{baseUrl}}"], "path": ["users", "login", "google"] }
          }
        },
        {
          "name": "POST /users/logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{}" },
            "url": { "raw": "{{baseUrl}}/users/logout", "host": ["{{baseUrl}}"], "path": ["users", "logout"] }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /auth/renew",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{}" },
            "url": { "raw": "{{baseUrl}}/auth/renew", "host": ["{{baseUrl}}"], "path": ["auth", "renew"] }
          }
        }
      ]
    },
    {
      "name": "Quests",
      "item": [
        {
          "name": "GET /quests",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/quests", "host": ["{{baseUrl}}"], "path": ["quests"] }
          }
        },
        {
          "name": "POST /quests",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{}" },
            "url": { "raw": "{{baseUrl}}/quests", "host": ["{{baseUrl}}"], "path": ["quests"] }
          }
        },
        {
          "name": "POST /quests/createTask",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"goalId\": \"<goal-id>\",\n  \"title\": \"Task title\",\n  \"dueAt\": 1735689600,\n  \"tags\": [\"tag1\", \"tag2\"]\n}"
            },
            "url": { "raw": "{{baseUrl}}/quests/createTask", "host": ["{{baseUrl}}"], "path": ["quests", "createTask"] }
          }
        },
        {
          "name": "PUT /quests/tasks/{taskId}",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated title\",\n  \"status\": \"completed\",\n  \"tags\": [\"x\"],\n  \"dueAt\": 1735689600\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quests/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["quests", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "DELETE /quests/tasks/{taskId}",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": {
              "raw": "{{baseUrl}}/quests/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["quests", "tasks", "{{taskId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://tuffc5cto8.execute-api.us-east-2.amazonaws.com/v1" },
    { "key": "apiKey", "value": "" },
    { "key": "jwt", "value": "" },
    { "key": "taskId", "value": "<task-id>" }
  ]
}


